{
    "name": "koppen-climate-lookup",
    "version": "1.0.2",
    "description": "Look up Koppen climate classifications by latitude and longitude",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "author": "Andrei Gec <@andreigec> (https://gec.dev/)",
    "repository": "github:andreigec/koppen-climate-lookup",
    "license": "ISC",
    "files": [
        "dist"
    ],
    "scripts": {
        "clean": "rimraf dist",
        "build": "pnpm run clean && tsup src/index.ts --format cjs,esm --dts --clean && pnpm run copy-csv",
        "copy-csv": "npx cpy src/koppen.csv dist/ --flat",
        "type-check": "tsc --noEmit",
        "test": "vitest run",
        "test:watch": "vitest",
        "prepublishOnly": "pnpm run build"
    },
    "keywords": [
        "koppen",
        "climate",
        "classification",
        "geography",
        "weather"
    ],
    "devDependencies": {
        "@types/node": "^20.0.0",
        "cpy-cli": "^5.0.0",
        "rimraf": "^5.0.0",
        "tsup": "^8.0.0",
        "typescript": "^5.0.0",
        "vitest": "^1.0.0"
    }
}